{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "surogate": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src/main/webapp",
      "prefix": "sm",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-esbuild:application",
          "options": {
            "plugins": ["build-plugins/i18n-default-esbuild.mjs", "build-plugins/define-esbuild.mjs"],
            "outputPath": {
              "base": "target/classes/static/",
              "browser": "",
              "server": "node-server",
              "media": "resources"
            },
            "index": "src/main/webapp/index.html",
            "browser": "src/main/webapp/main.ts",
            "loader": {
              ".wasm": "file"
            },
            "polyfills": [
              "zone.js",
              "src/main/webapp/polyfills.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/main/webapp/content",
              "src/main/webapp/assets",
              "src/main/webapp/i18n",
              "src/main/webapp/favicon.ico",
              "src/main/webapp/manifest.webapp",
              "src/main/webapp/robots.txt",
              {
                "glob": "duckdb-*.wasm",
                "input": "node_modules/@duckdb/duckdb-wasm/dist/",
                "output": "assets/duckdb/"
              },
              {
                "glob": "duckdb-browser-*.worker.js",
                "input": "node_modules/@duckdb/duckdb-wasm/dist/",
                "output": "assets/duckdb/"
              },
              {
                "glob": "*.pthread.worker.js",
                "input": "node_modules/@duckdb/duckdb-wasm/dist/",
                "output": "assets/duckdb/"
              }
            ],
            "styles": [
              "src/main/webapp/content/scss/global.scss",
              {
                "input": "src/main/webapp/assets/layout/styles/theme-light.scss",
                "bundleName": "theme-light",
                "inject": false
              },
              {
                "input": "src/main/webapp/assets/layout/styles/theme-dark.scss",
                "bundleName": "theme-dark",
                "inject": false
              }
            ],
            "scripts": [
            ],
            "allowedCommonJsDependencies": [
              "angular2-uuid",
              "sockjs-client",
              "lodash",
              "@xterm/addon-fit",
              "@xterm/xterm",
              "filesize",
              "highlight.js"
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1mb",
                  "maximumError": "10mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kb",
                  "maximumError": "6kb"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true,
              "fileReplacements": [
                {
                  "replace": "src/main/webapp/environments/environment.ts",
                  "with": "src/main/webapp/environments/environment.dev.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-builders/custom-esbuild:dev-server",
          "options": {
            "open": false,
            "buildTarget": "surogate:build:development",
            "port": 4200
          },
          "configurations": {
            "production": {
              "buildTarget": "surogate:build:production"
            },
            "development": {
              "buildTarget": "surogate:build:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  },
  "cli": {
    "cache": {
      "enabled": true,
      "path": "./target/angular/",
      "environment": "all"
    },
    "packageManager": "npm",
    "analytics": false
  }
}
